<?xml version="1.0" encoding="utf-8"?>
<linker>
  <!-- Preserve all WinUI3 and XAML related assemblies -->
  <assembly fullname="Microsoft.UI.Xaml" preserve="all" />
  <assembly fullname="Microsoft.WindowsAppSDK" preserve="all" />
  
  <!-- Preserve our main application assembly -->
  <assembly fullname="Schedule I Developer Environment Utility">
    <!-- Preserve all windows/views -->
    <type fullname="Schedule_I_Developer_Environment_Utility.MainWindow" preserve="all" />
    <type fullname="Schedule_I_Developer_Environment_Utility.ManagedEnvironmentWindow" preserve="all" />
    <type fullname="Schedule_I_Developer_Environment_Utility.SetupWizardWindow" preserve="all" />
    
    <!-- Preserve all ViewModels -->
    <namespace fullname="Schedule_I_Developer_Environment_Utility.ViewModels" preserve="all" />
    
    <!-- Preserve all Services -->
    <namespace fullname="Schedule_I_Developer_Environment_Utility.Services" preserve="all" />
    
    <!-- Preserve all Models -->
    <namespace fullname="Schedule_I_Developer_Environment_Utility.Models" preserve="all" />
  </assembly>
  
  <!-- Preserve Microsoft Extensions -->
  <assembly fullname="Microsoft.Extensions.DependencyInjection" preserve="all" />
  <assembly fullname="Microsoft.Extensions.Logging" preserve="all" />
  <assembly fullname="Microsoft.Extensions.Logging.Console" preserve="all" />
</linker>