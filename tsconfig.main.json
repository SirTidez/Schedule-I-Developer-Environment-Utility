{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist/main",
    "noEmit": false,
    "jsx": "preserve"
  },
  "include": [
    "src/main/**/*",
    "src/shared/**/*",
    "src/preload/**/*"
  ],
  "exclude": [
    "src/renderer/**/*",
    "node_modules",
    "dist",
    "dist-electron"
  ]
}
